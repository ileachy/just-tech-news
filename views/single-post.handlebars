<article class="post">
  <div class="title">
    <a href="{{post_url}}" target="_blank">{{post_title}}</a>
    <span>({{post_url}})</span>
  </div>
  <div class="meta">
    {{vote_count}}
    point(s) by
    {{user.username}}
    on
    {{created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>